name: Run Pester Tests and Publish to PowerShell Gallery

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set up PowerShell
      uses: actions/setup-powershell@v2
      with:
        version: 7.1.0
    - name: Install Pester
      run: pwsh -c "Install-Module Pester -Force"
    - name: Run Pester tests
      run: pwsh -c "Invoke-Pester -OutputFormat NUnitXml -OutputFile test-results.xml"
    - name: Publish to PowerShell Gallery
      if: success()
      run: pwsh -c "Publish-Module -Name 'MyModule' -NuGetApiKey '${{ secrets.PSGALLERY_TOKEN }}'"
